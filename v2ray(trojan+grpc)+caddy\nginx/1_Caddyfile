{
	order reverse_proxy before map
	admin off
	log { #注意：版本不小于v2.4.0才支持日志全局配置，否则各自配置。
		output file /var/log/caddy/access.log
		level ERROR
	}
}

:443, xx.yy { #xx.yy更改为自己的域名。注意：逗号与域名之间有一个空格。
	tls {
		protocols tls1.3
		alpn h2 http/1.1
	}

	reverse_proxy /tdngrpc/* 127.0.0.1:2010 { #与trojan+grpc应用中serviceName对应，转发给本机trojan+grpc监听端口。
		flush_interval -1
		transport http {
			versions h2c
		}
	}

	@host {
		host xx.yy #限定域名访问（禁止以ip方式访问网站），更改为自己的域名。
	}
	route @host {
		header {
			Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" #启用HSTS
		}
		file_server {
			root /var/www/html #更改为自己存放的web文件路径
		}
	}
}
